{
  "name": "hazardous-waste-management-backend",
  "version": "1.0.0",
  "description": "Backend for hazardous waste management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "init-db": "cd ../db/mysql && npm install && node init_db.js",
    "init-db-simple": "cd ../db/mysql && npm install && node init_db_simple.js",
    "dev": "nodemon server.js",
    "audit": "npm audit --audit-level=high || true"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "file-type": "^21.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.6.1",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/file-type": "^10.6.0",
    "nodemon": "^3.0.1"
  }
}
